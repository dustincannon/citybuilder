<h1>Listing icons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Main text</th>
    <th>Alt text</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @icons.each do |icon| %>
  <tr>
    <td><%= icon.name %></td>
    <td><%= icon.main_text %></td>
    <td><%= icon.alt_text %></td>
    <td><%= icon.image %></td>
    <td><%= link_to 'Show', icon %></td>
    <td><%= link_to 'Edit', edit_icon_path(icon) %></td>
    <td><%= link_to 'Destroy', icon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

